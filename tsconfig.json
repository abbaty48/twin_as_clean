{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*" : ["./*"],
      "@src/*": ["./src/*"],
      "@pages/*": ["src/pages/*"],
      "@hooks/*": ["src/hooks/*"],
      "@assets/*": ["src/assets/*"],
      "@recoil/*": ["src/recoil/*"],
      "@svgs/*": ["src/assets/svgs/*"],
      "@commons/*": ["src/commons/*"],
      "@stores/*": ["src/states/stores/*"],
      "@models/*": ["src/commons/models/*"],
      "@components/*": ["src/components/*"],
      "@reducers/*": ["src/states/reducers/*"],
    },
  },
  "include": ["src", "extensions.d.ts"]
}
